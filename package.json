{
	"name": "comradarr",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"postinstall": "if [ -d .git ]; then prek install && prek install --hook-type pre-push; fi",
		"dev": "bun --bun vite dev",
		"build": "bun --bun vite build",
		"start": "bun ./build",
		"preview": "bun --bun vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "uv run --project scripts/python comradarr-dev test all",
		"test:unit": "vitest run",
		"test:integration": "uv run --project scripts/python comradarr-dev test all --integration",
		"test:watch": "vitest",
		"test:db:setup": "uv run --project scripts/python comradarr-dev db setup",
		"test:db:teardown": "uv run --project scripts/python comradarr-dev db teardown",
		"test:db:reset": "uv run --project scripts/python comradarr-dev db reset",
		"test:db:status": "uv run --project scripts/python comradarr-dev db status",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && tsc --noEmit",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bunx drizzle-kit migrate",
		"db:push": "bunx drizzle-kit push",
		"db:studio": "bunx drizzle-kit studio",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check:biome": "biome check ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@internationalized/date": "^3.10.1",
		"@j178/prek": "^0.2.27",
		"@resvg/resvg-js": "^2.6.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.3",
		"@types/bun": "^1.3.5",
		"@types/nodemailer": "^7.0.4",
		"@unocss/preset-wind3": "^66.5.12",
		"drizzle-kit": "^0.31.8",
		"fast-check": "^4.5.3",
		"postgres": "^3.4.8",
		"shadcn-svelte": "^1.1.0",
		"svelte": "^5.46.1",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"unocss": "^66.5.12",
		"unocss-preset-animations": "^1.3.0",
		"unocss-preset-shadcn": "^1.0.1",
		"vite": "^7.3.1",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@lucide/svelte": "^0.562.0",
		"@node-rs/argon2": "^2.0.2",
		"@tanstack/svelte-virtual": "^3.13.18",
		"@unocss/extractor-svelte": "^66.5.12",
		"@unocss/reset": "^66.5.12",
		"bits-ui": "^2.15.4",
		"chart.js": "^4.5.1",
		"chartjs-adapter-date-fns": "^3.0.0",
		"clsx": "^2.1.1",
		"croner": "^9.1.0",
		"drizzle-orm": "^0.45.0",
		"formsnap": "^2.0.1",
		"nodemailer": "^7.0.12",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2"
	}
}
